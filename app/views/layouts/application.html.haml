%html{ lang: I18n.locale }
  %head
    %title CavaConnect
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    .container
      %h1 CavaConnect admin

      %ul.nav.nav-pills
        - %w{ horse color gender }.each do |i|
          %li= link_to(t("activerecord.models.#{i}.other"), send(:"admin_#{i}s_path"))

      = yield

