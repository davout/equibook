<h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
	<%= devise_error_messages! %>

	<div class="form-group">
		<%= f.label :email, :class => "col-sm-2 control-label" %>
		<div class="col-sm-5">
			<%= f.email_field :email, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), :class => "btn btn-primary" %>
		</div>
	</div>
<% end %>

<%= render "devise/shared/links" %>
