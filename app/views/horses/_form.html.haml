= form_for(@horse, html: { class: 'form-horizontal' }) do |f|
  = error_messages!(@horse)

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :nick, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :nick, class: 'form-control'

  .form-group
    = f.label :birth, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.date_select :birth, class: 'form-control'

  .form-group
    = f.label :height, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :height, class: 'form-control'

  .form-group
    = f.label :color_id, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.collection_select(:color_id, Color.all, :id, :name)

  .form-group
    = f.label :gender_id, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.collection_select(:gender_id, Gender.all, :id, :name)

  .form-group
    = f.label :dentist, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :dentist, class: 'form-control'

  .form-group
    = f.label :vet, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :vet, class: 'form-control'

  .form-group
    = f.label :blacksmith, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :blacksmith, class: 'form-control'

  .form-group
    = f.label :osteopath, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_field :osteopath, class: 'form-control'

  .form-group
    = f.label :blanket_size, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :blanket_size, class: 'form-control'

  .form-group
    = f.label :strap_size, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :strap_size, class: 'form-control'

  .form-group
    = f.label :bridle_size, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :bridle_size, class: 'form-control'

  .form-group
    = f.label :blanket_size, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :blanket_size, class: 'form-control'

  .form-group
    = f.label :horsebit_size, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.number_field :blanket_size, class: 'form-control'

  .form-group
    = f.label :comment, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_area :comment, class: 'form-control'

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-success'
      = link_to t('.back'), horses_path


